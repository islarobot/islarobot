        <script type="text/javascript" src="/socket.io/socket.io.js"></script> 
        <script type="text/javascript" src="assets/classes.js"></script>
        <script type="text/javascript" src="pdfobject/pdfobject.js"></script>
        
        <script type="text/javascript" src="assets/functions_main.js"></script>
        <!--The above library(/socket.io/socket.io.js) will be generated by socket.io module of server -->
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.min.js"></script> 
    </head>
    
    
    <script type="text/javascript">
    

    			

    			var text_code;
    
            var socket = io.connect("/"); 

				//solicito estado
				

			
				//solicito proyecto activo
				
				socket.emit('request_active_project_additional_documentation','');


  
  
				//recibo proyecto activo
				socket.on("active_project_additional_tutorial",function(message){

				console.log(message)
			// responseText encoding 
			pdfText=$.base64.decode(message.trim());

			// Now pdfText contains %PDF-1.4 ...... data...... %%EOF

			var winlogicalname = "detailPDF";
			var winparams = 'dependent=yes,locationbar=no,scrollbars=yes,menubar=yes,'+
            'resizable,screenX=50,screenY=50,width=850,height=1050';

			var htmlText = '<embed width=100% height=100%'
                     + ' type="application/pdf"'
                     + ' src="data:application/pdf,'
                     + escape(pdfText)
                     + '"></embed>'; 

                // Open PDF in new browser window
                var detailWindow = window.open ("", winlogicalname, winparams);
                detailWindow.document.write (htmlText);
                detailWindow.document.close ();
				


            }); 
            
			
   
        </script>
    
